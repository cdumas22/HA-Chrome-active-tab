{
  "manifest_version": 3,
  "name": "Home Assistant tab tracker",
  "description": "Send the currently active tab to Home Assistant",
  "version": "1.0.0",
  "icons": {
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "settings.html"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}